{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Result",
  "type": "object",
  "properties": {
    "job_id": { "type": "string", "description": "A unique identifier for the job." },
    "operation": { "type": "string", "description": "The image processing operation performed (e.g., 'resize', 'grayscale')." },
    "status": { "type": "string", "enum": ["success", "failed"], "description": "Status of the job execution." },
    "output_image_path": { "type": "string", "description": "Filepath to the resulting image." },
    "error": { "type": ["string", "null"], "description": "Error message if status is 'failed', otherwise null." },
    "metadata": { "type": ["object", "null"], "description": "Optional additional metadata about the job result." }
  },
  "required": ["job_id", "operation", "status", "output_image_path"],
  "additionalProperties": false
}
